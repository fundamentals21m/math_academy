      "sectionId": 15,
      "sectionTitle": "Cauchy sequences",
      "textbookSection": "5.1",
      "examples": [
        {
          "id": "ex-5-15-1",
          "type": "example",
          "title": "Showing $1/n$ is Cauchy",
          "statement": "Prove that the sequence $a_n = 1/n$ is a Cauchy sequence.",
          "solution": {
            "steps": [
              {
                "title": "Let $\\varepsilon > 0$",
                "content": "Choose $N > 1/\\varepsilon$."
              },
              {
                "title": "For $m, n > N$",
                "content": "$|a_m - a_n| = |1/m - 1/n| \\leq 1/m + 1/n < 1/N + 1/N < \\varepsilon$."
              }
            ],
            "conclusion": "The sequence is Cauchy."
          }
        }
      ],
      "exercises": [
        {
          "id": "5-15-1",
          "type": "exercise",
          "number": 1,
          "statement": "Prove that every Cauchy sequence is bounded.",
          "solution": {
            "steps": [
              {
                "title": "Use $\\varepsilon = 1$",
                "content": "There exists $N$ such that $|a_m - a_n| < 1$ for all $m, n > N$."
              },
              {
                "title": "Bound the tail",
                "content": "For $n > N$: $|a_n| \\leq |a_{N+1}| + |a_n - a_{N+1}| < |a_{N+1}| + 1$."
              },
              {
                "title": "Bound the head",
                "content": "The finite set $\\{a_1, \\ldots, a_N\\}$ is bounded by some $M_1$."
              }
            ],
            "conclusion": "Take $M = \\max(M_1, |a_{N+1}| + 1)$. Then $|a_n| \\leq M$ for all $n$."
          }
        }
      ]
    },
    {
      "sectionId": 16,
      "sectionTitle": "Equivalent Cauchy sequences",
      "textbookSection": "5.2",
      "examples": [],
      "exercises": [
        {
          "id": "5-16-1",
          "type": "exercise",
          "number": 1,
          "statement": "Show that if $(a_n)$ and $(b_n)$ are equivalent Cauchy sequences, then so are $(a_n + c)$ and $(b_n + c)$ for any rational $c$.",
          "solution": {
            "steps": [
              {
                "title": "Equivalence means $\\lim(a_n - b_n) = 0$",
                "content": "For any $\\varepsilon > 0$, there exists $N$ such that $|a_n - b_n| < \\varepsilon$ for $n > N$."
              },
              {
                "title": "Check the shifted sequences",
                "content": "$|(a_n + c) - (b_n + c)| = |a_n - b_n| < \\varepsilon$ for $n > N$."
              }
            ],
            "conclusion": "$(a_n + c) \\sim (b_n + c)$."
          }
        }
      ]
    },
    {
      "sectionId": 19,
      "sectionTitle": "The least upper bound property",
      "textbookSection": "5.5",
      "examples": [],
      "exercises": [
        {
          "id": "5-19-1",
          "type": "exercise",
          "number": 1,
          "statement": "Let $E = \\{x \\in \\mathbb{R} : x^2 < 2\\}$. Prove that $\\sup E = \\sqrt{2}$.",
          "solution": {
            "steps": [
              {
                "title": "Show $\\sqrt{2}$ is an upper bound",
                "content": "If $x \\in E$, then $x^2 < 2$, so $|x| < \\sqrt{2}$, thus $x \\leq \\sqrt{2}$."
              },
              {
                "title": "Show it's the least upper bound",
                "content": "If $M < \\sqrt{2}$ is an upper bound, choose $x$ with $M < x < \\sqrt{2}$. Then $x^2 < 2$, so $x \\in E$, contradicting $M$ being an upper bound."
              }
            ],
            "conclusion": "$\\sup E = \\sqrt{2}$."
          }
        }
      ]
    }
  ]

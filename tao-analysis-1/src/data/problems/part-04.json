      "exercises": [
        {
          "id": "4-13-1",
          "type": "exercise",
          "number": 1,
          "statement": "Prove that there is no rational number $p$ such that $p^2 = 2$ (Proposition 4.4.4).",
          "solution": {
            "steps": [
              {
                "title": "Assume $p = a/b$ with $\\gcd(a,b) = 1$",
                "content": "Then $p^2 = a^2/b^2 = 2$, so $a^2 = 2b^2$."
              },
              {
                "title": "Deduce $a$ is even",
                "content": "Since $a^2 = 2b^2$, $a^2$ is even, so $a$ is even. Write $a = 2k$."
              },
              {
                "title": "Deduce $b$ is even",
                "content": "$(2k)^2 = 2b^2$ gives $4k^2 = 2b^2$, so $b^2 = 2k^2$. Thus $b$ is even."
              },
              {
                "title": "Contradiction",
                "content": "Both $a$ and $b$ even contradicts $\\gcd(a,b) = 1$."
              }
            ],
            "conclusion": "There is no rational whose square is $2$."
          }
        }
      ]
    }
  ]
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read, only owner can write their own doc
    match /users/{npub} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == npub;
      allow update: if request.auth != null && request.auth.uid == npub
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'banned']);
      allow delete: if false;

      // Progress subcollection - only readable by owner, writes only via Cloud Functions
      match /progress/{docId} {
        allow read: if request.auth != null && request.auth.uid == npub;
        allow write: if false;
      }
    }

    // Scores collection - read-only for clients (written by Cloud Functions)
    match /scores/{scoreId} {
      allow read: if true;
      allow write: if false;
    }

    // Challenges collection - for auth flow (short-lived)
    match /challenges/{challengeId} {
      allow read: if true;
      allow write: if false;
    }

    // Admin logs collection - only admins can read, writes only via Cloud Functions
    match /adminLogs/{logId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow write: if false;
    }

    // Security logs collection - only admins can read, writes only via Cloud Functions
    match /securityLogs/{logId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow write: if false;
    }

    // Game rooms collection for multiplayer racing
    // Read allowed for authenticated users to enable real-time listeners
    // Writes only via Cloud Functions to prevent cheating
    match /gameRooms/{roomId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Project Manager - admin tool for managing course development
    // Requires authentication to prevent unauthorized access
    match /project-manager/{docId} {
      allow read, write: if request.auth != null;
    }

    // Project Manager History - backup/restore functionality
    // Requires authentication to prevent unauthorized access
    match /project-manager-history/{historyId} {
      allow read, write: if request.auth != null;
    }
  }
}

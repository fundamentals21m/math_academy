rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read, only owner can write their own doc
    match /users/{npub} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == npub;
      allow update: if request.auth != null && request.auth.uid == npub
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'banned']);
      allow delete: if false;

      // Progress subcollection - only readable by owner, writes only via Cloud Functions
      match /progress/{docId} {
        allow read: if request.auth != null && request.auth.uid == npub;
        allow write: if false;
      }
    }

    // Scores collection - read-only for clients (written by Cloud Functions)
    match /scores/{scoreId} {
      allow read: if true;
      allow write: if false;
    }

    // Challenges collection - for auth flow (short-lived)
    // Read restricted to authenticated users to prevent enumeration attacks
    match /challenges/{challengeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Admin logs collection - only admins can read, writes only via Cloud Functions
    match /adminLogs/{logId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow write: if false;
    }

    // Admin audit log collection - for comprehensive admin action tracking
    // Only admins can read, writes only via Cloud Functions
    // Includes 90-day TTL for automatic cleanup
    match /adminAuditLog/{logId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow write: if false;
    }

    // Admin audit log TTL collection - for automatic cleanup scheduling
    match /adminAuditLogTTL/{docId} {
      allow read: if false;
      allow write: if false;
    }

    // Errors collection - for production error monitoring
    // Only admins can read, writes only via Cloud Functions
    // Includes 90-day TTL for automatic cleanup
    match /errors/{errorId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow write: if false;
    }

    // Errors TTL collection - for automatic cleanup scheduling
    match /errorsTTL/{docId} {
      allow read: if false;
      allow write: if false;
    }

    // Security logs collection - only admins can read, writes only via Cloud Functions
    match /securityLogs/{logId} {
      allow read: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow write: if false;
    }

    // Game rooms collection for multiplayer racing
    // Read allowed for authenticated users to enable real-time listeners
    // Writes only via Cloud Functions to prevent cheating
    match /gameRooms/{roomId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Project Manager - admin tool for managing course development
    // Only admins can access project management data
    match /project-manager/{docId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Project Manager History - backup/restore functionality
    // Only admins can access history data
    match /project-manager-history/{historyId} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Course Configuration - dynamic course/category data for the hub
    // Public read access for hub rendering (except admins list)
    // Admin-only write access via Cloud Functions
    match /courseConfig/{docId} {
      allow read: if true;
      allow write: if false; // Writes only via Cloud Functions

      // Sections subcollection (categories)
      match /sections/{sectionId} {
        allow read: if true;
        allow write: if false;
      }

      // Courses subcollection
      match /courses/{courseId} {
        allow read: if true;
        allow write: if false;
      }

      // Admins subcollection - RESTRICTED to authenticated admins only
      // Prevents enumeration of admin identities
      match /admins/{adminId} {
        allow read: if request.auth != null &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
        allow write: if false;
      }
    }
  }
}

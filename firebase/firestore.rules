rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - anyone can read, only owner can write their own doc
    match /users/{npub} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == npub;
      allow update: if request.auth != null && request.auth.uid == npub
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'banned']);
      allow delete: if false;
    }

    // Scores collection - read-only for clients (written by Cloud Functions)
    match /scores/{scoreId} {
      allow read: if true;
      allow write: if false;
    }

    // Challenges collection - for auth flow (short-lived)
    match /challenges/{challengeId} {
      allow read: if true;
      allow write: if false;
    }
  }
}

{
  "name": "linalg",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "analyze": "vite build --mode analyze",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "node --version | grep -q 'v2[0-9]' && vitest run --coverage || echo 'Coverage requires Node 20+. Current version:' $(node --version)",
    "test:regression": "vitest run test/regression",
    "test:snapshot": "vitest run test/snapshots",
    "test:integration": "vitest run test/integration",
    "test:all": "npm run test:run && npm run test:regression && npm run test:integration",
    "storybook": "storybook dev -p public",
    "build-storybook": "npx storybook@8.6.3 build -p public"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "firebase": "^12.7.0",
    "framer-motion": "^12.24.7",
    "katex": "^0.16.27",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0"
  }
}

        {
          "id": "9-1-1",
          "type": "exercise",
          "number": 1,
          "statement": "Find $\\frac{dy}{dx}$ if $x^2 + y^2 = 25$ using implicit differentiation.",
          "solution": {
            "steps": [
              {"title": "Differentiate both sides", "content": "$2x + 2y\\frac{dy}{dx} = 0$."},
              {"title": "Solve for dy/dx", "content": "$\\frac{dy}{dx} = -\\frac{x}{y}$."}
            ],
            "conclusion": "$\\frac{dy}{dx} = -\\frac{x}{y}$."
          }
        },
        {
          "id": "9-1-2",
          "type": "exercise",
          "number": 2,
          "statement": "Find the critical points of $f(x,y) = x^2 + y^2 - 2x - 4y + 5$.",
          "solution": {
            "steps": [
              {"title": "Find partial derivatives", "content": "$f_x = 2x - 2 = 0$ and $f_y = 2y - 4 = 0$."},
              {"title": "Solve system", "content": "$x = 1$ and $y = 2$."}
            ],
            "conclusion": "The only critical point is $(1, 2)$."
          }
        }
      ]
    }
  ]

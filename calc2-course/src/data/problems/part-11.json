      "exercises": [
        {
          "id": "12-1-1",
          "type": "exercise",
          "number": 1,
          "statement": "Find a parametrization for the sphere $x^2 + y^2 + z^2 = 4$.",
          "solution": {
            "steps": [
              {"title": "Use spherical coordinates", "content": "Let $x = 2\\sin\\phi\\cos\\theta$, $y = 2\\sin\\phi\\sin\\theta$, $z = 2\\cos\\phi$."},
              {"title": "Bounds", "content": "$0 \\leq \\phi \\leq \\pi$, $0 \\leq \\theta \\leq 2\\pi$."}
            ],
            "conclusion": "$\\mathbf{r}(\\phi, \\theta) = (2\\sin\\phi\\cos\\theta, 2\\sin\\phi\\sin\\theta, 2\\cos\\phi)$."
          }
        },
        {
          "id": "12-1-2",
          "type": "exercise",
          "number": 2,
          "statement": "Compute the surface area of the hemisphere $z = \\sqrt{4 - x^2 - y^2}$.",
          "solution": {
            "steps": [
              {"title": "Surface area formula", "content": "$A = \\iint_D \\sqrt{1 + f_x^2 + f_y^2}\\,dA$ where $f = \\sqrt{4-x^2-y^2}$."},
              {"title": "Compute partials", "content": "$f_x = \\frac{-x}{\\sqrt{4-x^2-y^2}}$, $f_y = \\frac{-y}{\\sqrt{4-x^2-y^2}}$."},
              {"title": "Simplify integrand", "content": "$\\sqrt{1 + f_x^2 + f_y^2} = \\frac{2}{\\sqrt{4-x^2-y^2}}$."},
              {"title": "Use polar coordinates", "content": "$A = \\int_0^{2\\pi}\\int_0^2 \\frac{2r}{\\sqrt{4-r^2}}\\,dr\\,d\\theta = 8\\pi$."}
            ],
            "conclusion": "The surface area is $8\\pi$."
          }
        }
      ]
    }
  ]
}

      "exercises": [
        {
          "id": "3-1-1",
          "type": "exercise",
          "number": 1,
          "statement": "Compute the determinant of $A = \\begin{pmatrix} 2 & 1 \\\\ 3 & 4 \\end{pmatrix}$.",
          "solution": {
            "steps": [
              {"title": "Apply 2×2 formula", "content": "$\\det(A) = ad - bc = (2)(4) - (1)(3) = 8 - 3 = 5$."}
            ],
            "conclusion": "$\\det(A) = 5$."
          }
        },
        {
          "id": "3-1-2",
          "type": "exercise",
          "number": 2,
          "statement": "Prove that $\\det(AB) = \\det(A)\\det(B)$ for 2×2 matrices.",
          "solution": {
            "steps": [
              {"title": "Direct computation", "content": "Multiply out $AB$ and compute both sides of the equation."},
              {"title": "Verify equality", "content": "Both sides equal $(a_1b_1 - a_2b_3)(c_1d_1 - c_2d_3) + ...$"}
            ],
            "conclusion": "The multiplicative property holds for 2×2 matrices."
          }
        }
      ]
    }
  ]

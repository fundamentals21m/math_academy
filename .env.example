# Magic Internet Math - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these values from Firebase Console > Project Settings > Your apps
# https://console.firebase.google.com/project/YOUR_PROJECT/settings/general

VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# =============================================================================
# NOSTR CONFIGURATION (Optional)
# =============================================================================
# Settings for Nostr authentication and relay connections

# Comma-separated list of default relays
# VITE_NOSTR_DEFAULT_RELAYS=wss://relay.damus.io,wss://relay.nostr.band

# Relay connection timeout in milliseconds
# VITE_NOSTR_RELAY_TIMEOUT=5000

# Extension wait timeout in milliseconds
# VITE_NOSTR_EXTENSION_WAIT=2000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Control optional features and behavior

# Enable/disable Nostr authentication
# VITE_FEATURE_NOSTR_AUTH=true

# Enable/disable leaderboard
# VITE_FEATURE_LEADERBOARD=true

# Enable/disable achievements
# VITE_FEATURE_ACHIEVEMENTS=true

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================
# Control logging levels and debug features

# Logging level: debug, info, warn, error
# VITE_LOG_LEVEL=info

# Enable/disable debug mode (more verbose logging)
# VITE_DEBUG=false

# Enable/disable performance monitoring
# VITE_PERFORMANCE_MONITORING=false

# =============================================================================
# BUILD-TIME CONFIGURATION
# =============================================================================
# These are set automatically during build

# Course ID (set by course template)
# VITE_COURSE_ID=

# Course name (set by course template)
# VITE_COURSE_NAME=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Only used during development

# Enable Vite devtools
# VITE_DEVTOOLS=true

# Hot Module Replacement endpoint
# VITE_HMR_HOST=localhost:5173

# =============================================================================
# NOTES
# =============================================================================
# 1. All VITE_* variables are exposed to the browser client
# 2. Never put secret keys in VITE_* variables
# 3. Use Firebase Cloud Functions for sensitive operations
# 4. See scripts/deploy-to-hub.sh for deployment configuration

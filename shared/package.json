{
  "name": "@magic-internet-math/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    },
    "./gamification/storage": {
      "types": "./gamification/storage.ts",
      "import": "./gamification/storage.ts"
    },
    "./gamification/*": {
      "types": "./gamification/*.ts",
      "import": "./gamification/*.ts"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "firebase": "^12.8.0",
    "react": "^19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "happy-dom": "^20.3.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "katex": "^0.16.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "node --version | grep -q 'v2[0-9]' && vitest run --coverage || echo 'Coverage requires Node 20+. Current version:' $(node --version)",
    "test:regression": "vitest run test/regression",
    "test:snapshot": "vitest run test/snapshots",
    "test:integration": "vitest run test/integration",
    "test:all": "npm run test:run && npm run test:regression && npm run test:integration"
  }
}

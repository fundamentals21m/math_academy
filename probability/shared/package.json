{
  "name": "@magic-internet-math/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": {
      "types": "./index.ts",
      "import": "./index.ts"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "firebase": "^10.14.0",
    "react": "^18.0.0 || ^19.0.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.5",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "vitest": "^4.0.16",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "katex": "^0.16.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "node --version | grep -q 'v2[0-9]' && vitest run --coverage || echo 'Coverage requires Node 20+. Current version:' $(node --version)",
    "test:regression": "vitest run test/regression",
    "test:snapshot": "vitest run test/snapshots",
    "test:integration": "vitest run test/integration",
    "test:all": "npm run test:run && npm run test:regression && npm run test:integration",
    "storybook": "storybook dev -p public",
    "build-storybook": "storybook build -p public",
    "chromatic": "chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}"
  }
}

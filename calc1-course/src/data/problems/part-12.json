  "sections": [
    {
      "sectionId": 74,
      "sectionTitle": "Vectors in n-Space",
      "textbookSection": "§13.1",
      "examples": [
        {
          "id": "ex-13-74-1",
          "type": "example",
          "title": "Vector Arithmetic",
          "statement": "Let $\\mathbf{u} = (2, -1, 3)$ and $\\mathbf{v} = (1, 4, -2)$. Compute $\\mathbf{u} + \\mathbf{v}$, $3\\mathbf{u}$, and $2\\mathbf{u} - 3\\mathbf{v}$.",
          "solution": {
            "steps": [
              {"title": "Vector addition", "content": "$\\mathbf{u} + \\mathbf{v} = (2+1, -1+4, 3+(-2)) = (3, 3, 1)$"},
              {"title": "Scalar multiplication", "content": "$3\\mathbf{u} = (3 \\cdot 2, 3 \\cdot (-1), 3 \\cdot 3) = (6, -3, 9)$"},
              {"title": "Linear combination", "content": "$2\\mathbf{u} - 3\\mathbf{v} = (4, -2, 6) - (3, 12, -6) = (1, -14, 12)$"}
            ],
            "conclusion": "$\\mathbf{u} + \\mathbf{v} = (3, 3, 1)$, $3\\mathbf{u} = (6, -3, 9)$, $2\\mathbf{u} - 3\\mathbf{v} = (1, -14, 12)$"
          }
        },
        {
          "id": "ex-13-74-2",
          "type": "example",
          "title": "Writing Vectors in Terms of Standard Basis",
          "statement": "Express $\\mathbf{w} = (4, -2, 5)$ as a linear combination of the standard basis vectors $\\mathbf{i}, \\mathbf{j}, \\mathbf{k}$ in $\\mathbb{R}^3$.",
          "solution": {
            "steps": [
              {"title": "Recall standard basis", "content": "$\\mathbf{i} = (1, 0, 0)$, $\\mathbf{j} = (0, 1, 0)$, $\\mathbf{k} = (0, 0, 1)$"},
              {"title": "Write as combination", "content": "$\\mathbf{w} = 4(1, 0, 0) + (-2)(0, 1, 0) + 5(0, 0, 1) = 4\\mathbf{i} - 2\\mathbf{j} + 5\\mathbf{k}$"}
            ],
            "conclusion": "$\\mathbf{w} = 4\\mathbf{i} - 2\\mathbf{j} + 5\\mathbf{k}$"
          }
        }
      ],
      "exercises": [
        {
          "id": "13-74-1",
          "type": "exercise",
          "number": 1,
          "statement": "Let $\\mathbf{a} = (3, 1, -2)$ and $\\mathbf{b} = (1, -2, 4)$. Compute $\\mathbf{a} + \\mathbf{b}$.",
          "solution": {
            "steps": [
              {"title": "Add components", "content": "$\\mathbf{a} + \\mathbf{b} = (3+1, 1+(-2), -2+4) = (4, -1, 2)$"}
            ],
            "conclusion": "$(4, -1, 2)$"
          }
        },
        {
          "id": "13-74-2",
          "type": "exercise",
          "number": 2,
          "statement": "Compute $-4\\mathbf{v}$ where $\\mathbf{v} = (2, -3, 1)$.",
          "solution": {
            "steps": [
              {"title": "Multiply each component", "content": "$-4\\mathbf{v} = (-4 \\cdot 2, -4 \\cdot (-3), -4 \\cdot 1) = (-8, 12, -4)$"}
            ],
            "conclusion": "$(-8, 12, -4)$"
          }
        },
        {
          "id": "13-74-3",
          "type": "exercise",
          "number": 3,
          "statement": "If $\\mathbf{x} = (1, 2)$ and $\\mathbf{y} = (3, -1)$, find the vector $\\mathbf{z}$ such that $\\mathbf{x} + \\mathbf{z} = \\mathbf{y}$.",
          "solution": {
            "steps": [
              {"title": "Solve for z", "content": "$\\mathbf{z} = \\mathbf{y} - \\mathbf{x} = (3-1, -1-2) = (2, -3)$"}
            ],
            "conclusion": "$\\mathbf{z} = (2, -3)$"
          }
        },
        {
          "id": "13-74-4",
          "type": "exercise",
          "number": 4,
          "statement": "Find scalars $a$ and $b$ such that $a(1, 2) + b(2, 1) = (7, 5)$.",
          "solution": {
            "steps": [
              {"title": "Set up system", "content": "$a + 2b = 7$ and $2a + b = 5$"},
              {"title": "Solve", "content": "From first equation: $a = 7 - 2b$. Substituting: $2(7-2b) + b = 5 \\Rightarrow 14 - 3b = 5 \\Rightarrow b = 3$"},
              {"title": "Find a", "content": "$a = 7 - 2(3) = 1$"}
            ],
            "conclusion": "$a = 1$, $b = 3$"
          }
        },
        {
          "id": "13-74-5",
          "type": "exercise",
          "number": 5,
          "statement": "Show that $(1, 0, 1)$, $(0, 1, 1)$, and $(1, 1, 0)$ cannot all be parallel to each other.",
          "solution": {
            "steps": [
              {"title": "Check for scalar multiples", "content": "If $(1, 0, 1) = c(0, 1, 1)$, then $1 = 0$ (first component), which is false."},
              {"title": "Conclude", "content": "Since $(1, 0, 1)$ is not a scalar multiple of $(0, 1, 1)$, they are not parallel."}
            ],
            "conclusion": "The vectors are not all parallel to each other."
          }
        },
        {
          "id": "13-74-6",
          "type": "exercise",
          "number": 6,
          "statement": "For what value of $t$ are the vectors $(t, 2)$ and $(6, 4)$ parallel?",
          "solution": {
            "steps": [
              {"title": "Condition for parallel", "content": "$(t, 2) = c(6, 4)$ for some scalar $c$. From the second component: $2 = 4c \\Rightarrow c = 1/2$"},
              {"title": "Find t", "content": "$t = 6 \\cdot (1/2) = 3$"}
            ],
            "conclusion": "$t = 3$"
          }
        },
        {
          "id": "13-74-7",
          "type": "exercise",
          "number": 7,
          "statement": "Express $(5, 7, -3)$ as a linear combination of $\\mathbf{e}_1$, $\\mathbf{e}_2$, $\\mathbf{e}_3$.",
          "solution": {
            "steps": [
              {"title": "Use definition", "content": "$(5, 7, -3) = 5\\mathbf{e}_1 + 7\\mathbf{e}_2 + (-3)\\mathbf{e}_3 = 5\\mathbf{e}_1 + 7\\mathbf{e}_2 - 3\\mathbf{e}_3$"}
            ],
            "conclusion": "$5\\mathbf{e}_1 + 7\\mathbf{e}_2 - 3\\mathbf{e}_3$"
          }
        },
        {
          "id": "13-74-8",
          "type": "exercise",
          "number": 8,
          "statement": "Verify the distributive property: $2((1, 3) + (2, -1)) = 2(1, 3) + 2(2, -1)$.",
          "solution": {
            "steps": [
              {"title": "Left side", "content": "$2((1, 3) + (2, -1)) = 2(3, 2) = (6, 4)$"},
              {"title": "Right side", "content": "$2(1, 3) + 2(2, -1) = (2, 6) + (4, -2) = (6, 4)$"},
              {"title": "Compare", "content": "Both sides equal $(6, 4)$."}
            ],
            "conclusion": "The property is verified: both sides equal $(6, 4)$."
          }
        }
      ]
    },
    {
      "sectionId": 75,
      "sectionTitle": "Dot Product",
      "textbookSection": "§13.2",
      "examples": [
        {
          "id": "ex-13-75-1",
          "type": "example",
          "title": "Computing Dot Products and Norms",
          "statement": "For $\\mathbf{u} = (2, -1, 2)$ and $\\mathbf{v} = (1, 3, -1)$, compute $\\mathbf{u} \\cdot \\mathbf{v}$, $\\|\\mathbf{u}\\|$, and $\\|\\mathbf{v}\\|$.",
          "solution": {
            "steps": [
              {"title": "Dot product", "content": "$\\mathbf{u} \\cdot \\mathbf{v} = 2(1) + (-1)(3) + 2(-1) = 2 - 3 - 2 = -3$"},
              {"title": "Norm of u", "content": "$\\|\\mathbf{u}\\| = \\sqrt{4 + 1 + 4} = \\sqrt{9} = 3$"},
              {"title": "Norm of v", "content": "$\\|\\mathbf{v}\\| = \\sqrt{1 + 9 + 1} = \\sqrt{11}$"}
            ],
            "conclusion": "$\\mathbf{u} \\cdot \\mathbf{v} = -3$, $\\|\\mathbf{u}\\| = 3$, $\\|\\mathbf{v}\\| = \\sqrt{11}$"
          }
        },
        {
          "id": "ex-13-75-2",
          "type": "example",
          "title": "Finding the Angle Between Vectors",
          "statement": "Find the angle between $\\mathbf{a} = (1, 2, 2)$ and $\\mathbf{b} = (2, -1, 0)$.",
          "solution": {
            "steps": [
              {"title": "Compute dot product", "content": "$\\mathbf{a} \\cdot \\mathbf{b} = 1(2) + 2(-1) + 2(0) = 2 - 2 + 0 = 0$"},
              {"title": "Interpret", "content": "Since $\\mathbf{a} \\cdot \\mathbf{b} = 0$, the vectors are orthogonal."}
            ],
            "conclusion": "$\\theta = 90°$ (the vectors are perpendicular)"
          }
        },
        {
          "id": "ex-13-75-3",
          "type": "example",
          "title": "Finding a Unit Vector",
          "statement": "Find the unit vector in the direction of $\\mathbf{v} = (1, 2, 2)$.",
          "solution": {
            "steps": [
              {"title": "Find the norm", "content": "$\\|\\mathbf{v}\\| = \\sqrt{1 + 4 + 4} = \\sqrt{9} = 3$"},
              {"title": "Divide by norm", "content": "$\\hat{\\mathbf{v}} = \\frac{1}{3}(1, 2, 2) = \\left(\\frac{1}{3}, \\frac{2}{3}, \\frac{2}{3}\\right)$"}
            ],
            "conclusion": "$\\hat{\\mathbf{v}} = \\left(\\frac{1}{3}, \\frac{2}{3}, \\frac{2}{3}\\right)$"
          }
        }
      ],
      "exercises": [
        {
          "id": "13-75-1",
          "type": "exercise",
          "number": 1,
          "statement": "Compute $(2, 3) \\cdot (4, -1)$.",
          "solution": {
            "steps": [
              {"title": "Apply definition", "content": "$(2, 3) \\cdot (4, -1) = 2(4) + 3(-1) = 8 - 3 = 5$"}
            ],
            "conclusion": "$5$"
          }
        },
        {
          "id": "13-75-2",
          "type": "exercise",
          "number": 2,
          "statement": "Find $\\|(3, -4)\\|$.",
          "solution": {
            "steps": [
              {"title": "Apply formula", "content": "$\\|(3, -4)\\| = \\sqrt{9 + 16} = \\sqrt{25} = 5$"}
            ],
            "conclusion": "$5$"
          }
        },
        {
          "id": "13-75-3",
          "type": "exercise",
          "number": 3,
          "statement": "Find the distance between the points $(1, 2, 3)$ and $(4, 6, 3)$.",
          "solution": {
            "steps": [
              {"title": "Compute difference", "content": "$(4-1, 6-2, 3-3) = (3, 4, 0)$"},
              {"title": "Find norm", "content": "$d = \\|(3, 4, 0)\\| = \\sqrt{9 + 16 + 0} = 5$"}
            ],
            "conclusion": "$d = 5$"
          }
        },
        {
          "id": "13-75-4",
          "type": "exercise",
          "number": 4,
          "statement": "Find the unit vector in the direction of $(5, 12)$.",
          "solution": {
            "steps": [
              {"title": "Find norm", "content": "$\\|(5, 12)\\| = \\sqrt{25 + 144} = \\sqrt{169} = 13$"},
              {"title": "Normalize", "content": "$\\hat{\\mathbf{v}} = \\frac{1}{13}(5, 12) = \\left(\\frac{5}{13}, \\frac{12}{13}\\right)$"}
            ],
            "conclusion": "$\\left(\\frac{5}{13}, \\frac{12}{13}\\right)$"
          }
        },
        {
          "id": "13-75-5",
          "type": "exercise",
          "number": 5,
          "statement": "Find the angle between $(1, 0)$ and $(1, \\sqrt{3})$.",
          "solution": {
            "steps": [
              {"title": "Dot product", "content": "$(1, 0) \\cdot (1, \\sqrt{3}) = 1$"},
              {"title": "Norms", "content": "$\\|(1, 0)\\| = 1$, $\\|(1, \\sqrt{3})\\| = \\sqrt{1 + 3} = 2$"},
              {"title": "Find angle", "content": "$\\cos\\theta = \\frac{1}{1 \\cdot 2} = \\frac{1}{2}$, so $\\theta = 60°$"}
            ],
            "conclusion": "$\\theta = 60°$ or $\\pi/3$ radians"
          }
        },
        {
          "id": "13-75-6",
          "type": "exercise",
          "number": 6,
          "statement": "Show that $(1, 2, -1)$ and $(2, 1, 4)$ are orthogonal.",
          "solution": {
            "steps": [
              {"title": "Compute dot product", "content": "$(1, 2, -1) \\cdot (2, 1, 4) = 2 + 2 - 4 = 0$"}
            ],
            "conclusion": "Since the dot product is zero, the vectors are orthogonal."
          }
        },
        {
          "id": "13-75-7",
          "type": "exercise",
          "number": 7,
          "statement": "Find a vector orthogonal to $(3, 2)$.",
          "solution": {
            "steps": [
              {"title": "Use perpendicular trick", "content": "For $(a, b)$, the vector $(-b, a)$ is orthogonal."},
              {"title": "Apply", "content": "A vector orthogonal to $(3, 2)$ is $(-2, 3)$."},
              {"title": "Verify", "content": "$(3, 2) \\cdot (-2, 3) = -6 + 6 = 0$ ✓"}
            ],
            "conclusion": "$(-2, 3)$ (or any scalar multiple)"
          }
        },
        {
          "id": "13-75-8",
          "type": "exercise",
          "number": 8,
          "statement": "Verify the Cauchy-Schwarz inequality for $(1, 2)$ and $(3, 0)$.",
          "solution": {
            "steps": [
              {"title": "Left side", "content": "$|\\mathbf{u} \\cdot \\mathbf{v}| = |3 + 0| = 3$"},
              {"title": "Right side", "content": "$\\|\\mathbf{u}\\|\\|\\mathbf{v}\\| = \\sqrt{5} \\cdot 3 = 3\\sqrt{5} \\approx 6.71$"},
              {"title": "Compare", "content": "$3 < 3\\sqrt{5}$ ✓"}
            ],
            "conclusion": "$3 \\le 3\\sqrt{5}$, so the inequality holds."
          }
        },
        {
          "id": "13-75-9",
          "type": "exercise",
          "number": 9,
          "statement": "Find all vectors $(x, y)$ such that $\\|(x, y)\\| = 1$ and $(x, y) \\cdot (1, 0) = \\frac{1}{2}$.",
          "solution": {
            "steps": [
              {"title": "First condition", "content": "$x^2 + y^2 = 1$"},
              {"title": "Second condition", "content": "$(x, y) \\cdot (1, 0) = x = \\frac{1}{2}$"},
              {"title": "Solve for y", "content": "$\\frac{1}{4} + y^2 = 1 \\Rightarrow y^2 = \\frac{3}{4} \\Rightarrow y = \\pm\\frac{\\sqrt{3}}{2}$"}
            ],
            "conclusion": "$\\left(\\frac{1}{2}, \\frac{\\sqrt{3}}{2}\\right)$ and $\\left(\\frac{1}{2}, -\\frac{\\sqrt{3}}{2}\\right)$"
          }
        },
        {
          "id": "13-75-10",
          "type": "exercise",
          "number": 10,
          "statement": "Compute $\\|\\mathbf{u} + \\mathbf{v}\\|^2$ in terms of $\\mathbf{u} \\cdot \\mathbf{u}$, $\\mathbf{v} \\cdot \\mathbf{v}$, and $\\mathbf{u} \\cdot \\mathbf{v}$.",
          "solution": {
            "steps": [
              {"title": "Expand", "content": "$\\|\\mathbf{u} + \\mathbf{v}\\|^2 = (\\mathbf{u} + \\mathbf{v}) \\cdot (\\mathbf{u} + \\mathbf{v})$"},
              {"title": "Distribute", "content": "$= \\mathbf{u} \\cdot \\mathbf{u} + 2(\\mathbf{u} \\cdot \\mathbf{v}) + \\mathbf{v} \\cdot \\mathbf{v}$"}
            ],
            "conclusion": "$\\|\\mathbf{u} + \\mathbf{v}\\|^2 = \\|\\mathbf{u}\\|^2 + 2(\\mathbf{u} \\cdot \\mathbf{v}) + \\|\\mathbf{v}\\|^2$"
          }
        }
      ]
    },
    {
      "sectionId": 76,
      "sectionTitle": "Projections and Angles",
      "textbookSection": "§13.3",
      "examples": [
        {
          "id": "ex-13-76-1",
          "type": "example",
          "title": "Computing Projections",
          "statement": "Find the projection of $\\mathbf{b} = (4, 3)$ onto $\\mathbf{a} = (2, 0)$.",
          "solution": {
            "steps": [
              {"title": "Compute dot products", "content": "$\\mathbf{a} \\cdot \\mathbf{b} = 8$, $\\|\\mathbf{a}\\|^2 = 4$"},
              {"title": "Apply formula", "content": "$\\text{proj}_{\\mathbf{a}}\\mathbf{b} = \\frac{8}{4}(2, 0) = 2(2, 0) = (4, 0)$"}
            ],
            "conclusion": "$\\text{proj}_{\\mathbf{a}}\\mathbf{b} = (4, 0)$"
          }
        },
        {
          "id": "ex-13-76-2",
          "type": "example",
          "title": "Orthogonal Decomposition",
          "statement": "Decompose $\\mathbf{b} = (5, 3)$ into components parallel and perpendicular to $\\mathbf{a} = (1, 1)$.",
          "solution": {
            "steps": [
              {"title": "Find parallel component", "content": "$\\mathbf{b}_\\parallel = \\frac{\\mathbf{a} \\cdot \\mathbf{b}}{\\|\\mathbf{a}\\|^2}\\mathbf{a} = \\frac{8}{2}(1, 1) = (4, 4)$"},
              {"title": "Find perpendicular component", "content": "$\\mathbf{b}_\\perp = \\mathbf{b} - \\mathbf{b}_\\parallel = (5, 3) - (4, 4) = (1, -1)$"},
              {"title": "Verify orthogonality", "content": "$(1, 1) \\cdot (1, -1) = 1 - 1 = 0$ ✓"}
            ],
            "conclusion": "$\\mathbf{b} = (4, 4) + (1, -1)$ with $(4, 4) \\parallel \\mathbf{a}$ and $(1, -1) \\perp \\mathbf{a}$"
          }
        }
      ],
      "exercises": [
        {
          "id": "13-76-1",
          "type": "exercise",
          "number": 1,
          "statement": "Find the scalar projection of $(6, 2)$ onto $(3, 0)$.",
          "solution": {
            "steps": [
              {"title": "Apply formula", "content": "$\\text{comp}_{\\mathbf{a}}\\mathbf{b} = \\frac{\\mathbf{a} \\cdot \\mathbf{b}}{\\|\\mathbf{a}\\|} = \\frac{18}{3} = 6$"}
            ],
            "conclusion": "$6$"
          }
        },
        {
          "id": "13-76-2",
          "type": "exercise",
          "number": 2,
          "statement": "Find the vector projection of $(3, 4)$ onto $(1, 1)$.",
          "solution": {
            "steps": [
              {"title": "Compute", "content": "$\\mathbf{a} \\cdot \\mathbf{b} = 7$, $\\|\\mathbf{a}\\|^2 = 2$"},
              {"title": "Project", "content": "$\\text{proj}_{\\mathbf{a}}\\mathbf{b} = \\frac{7}{2}(1, 1) = \\left(\\frac{7}{2}, \\frac{7}{2}\\right)$"}
            ],
            "conclusion": "$\\left(\\frac{7}{2}, \\frac{7}{2}\\right)$"
          }
        },
        {
          "id": "13-76-3",
          "type": "exercise",
          "number": 3,
          "statement": "Find the distance from the point $(3, 2)$ to the line $y = x$.",
          "solution": {
            "steps": [
              {"title": "Direction of line", "content": "$\\mathbf{d} = (1, 1)$, $\\mathbf{p} = (3, 2)$"},
              {"title": "Project p onto d", "content": "$\\text{proj}_{\\mathbf{d}}\\mathbf{p} = \\frac{5}{2}(1, 1) = (\\frac{5}{2}, \\frac{5}{2})$"},
              {"title": "Find perpendicular", "content": "$\\mathbf{p}_\\perp = (3, 2) - (\\frac{5}{2}, \\frac{5}{2}) = (\\frac{1}{2}, -\\frac{1}{2})$"},
              {"title": "Distance", "content": "$\\|\\mathbf{p}_\\perp\\| = \\sqrt{\\frac{1}{4} + \\frac{1}{4}} = \\frac{1}{\\sqrt{2}} = \\frac{\\sqrt{2}}{2}$"}
            ],
            "conclusion": "$\\frac{\\sqrt{2}}{2}$"
          }
        },
        {
          "id": "13-76-4",
          "type": "exercise",
          "number": 4,
          "statement": "Reflect the vector $(2, 3)$ across the x-axis.",
          "solution": {
            "steps": [
              {"title": "Direction of x-axis", "content": "$\\mathbf{a} = (1, 0)$"},
              {"title": "Project", "content": "$\\text{proj}_{\\mathbf{a}}\\mathbf{b} = (2, 0)$"},
              {"title": "Reflect", "content": "$\\text{refl}_{\\mathbf{a}}\\mathbf{b} = 2(2, 0) - (2, 3) = (4, 0) - (2, 3) = (2, -3)$"}
            ],
            "conclusion": "$(2, -3)$"
          }
        },
        {
          "id": "13-76-5",
          "type": "exercise",
          "number": 5,
          "statement": "Find the direction cosines of the vector $(2, 2, 1)$.",
          "solution": {
            "steps": [
              {"title": "Find norm", "content": "$\\|\\mathbf{v}\\| = \\sqrt{4 + 4 + 1} = 3$"},
              {"title": "Direction cosines", "content": "$\\cos\\alpha = \\frac{2}{3}$, $\\cos\\beta = \\frac{2}{3}$, $\\cos\\gamma = \\frac{1}{3}$"}
            ],
            "conclusion": "$\\cos\\alpha = \\frac{2}{3}$, $\\cos\\beta = \\frac{2}{3}$, $\\cos\\gamma = \\frac{1}{3}$"
          }
        },
        {
          "id": "13-76-6",
          "type": "exercise",
          "number": 6,
          "statement": "A force $\\mathbf{F} = (4, 3)$ N moves an object from $(1, 1)$ to $(4, 5)$ m. Find the work done.",
          "solution": {
            "steps": [
              {"title": "Find displacement", "content": "$\\mathbf{d} = (4-1, 5-1) = (3, 4)$"},
              {"title": "Compute work", "content": "$W = \\mathbf{F} \\cdot \\mathbf{d} = 4(3) + 3(4) = 12 + 12 = 24$ J"}
            ],
            "conclusion": "$W = 24$ Joules"
          }
        },
        {
          "id": "13-76-7",
          "type": "exercise",
          "number": 7,
          "statement": "Find the acute angle between the lines $y = 2x$ and $y = -x$.",
          "solution": {
            "steps": [
              {"title": "Direction vectors", "content": "$\\mathbf{d}_1 = (1, 2)$, $\\mathbf{d}_2 = (1, -1)$"},
              {"title": "Dot product", "content": "$\\mathbf{d}_1 \\cdot \\mathbf{d}_2 = 1 - 2 = -1$"},
              {"title": "Find angle", "content": "$\\cos\\theta = \\frac{|-1|}{\\sqrt{5} \\cdot \\sqrt{2}} = \\frac{1}{\\sqrt{10}}$"},
              {"title": "Evaluate", "content": "$\\theta = \\arccos\\left(\\frac{1}{\\sqrt{10}}\\right) \\approx 71.6°$"}
            ],
            "conclusion": "$\\theta = \\arccos\\left(\\frac{1}{\\sqrt{10}}\\right) \\approx 71.6°$"
          }
        },
        {
          "id": "13-76-8",
          "type": "exercise",
          "number": 8,
          "statement": "Prove that $\\text{proj}_{\\mathbf{a}}(\\text{proj}_{\\mathbf{a}}\\mathbf{b}) = \\text{proj}_{\\mathbf{a}}\\mathbf{b}$ for any nonzero $\\mathbf{a}$ and any $\\mathbf{b}$.",
          "solution": {
            "steps": [
              {"title": "Let p = proj", "content": "Let $\\mathbf{p} = \\text{proj}_{\\mathbf{a}}\\mathbf{b} = \\frac{\\mathbf{a} \\cdot \\mathbf{b}}{\\|\\mathbf{a}\\|^2}\\mathbf{a} = c\\mathbf{a}$ where $c = \\frac{\\mathbf{a} \\cdot \\mathbf{b}}{\\|\\mathbf{a}\\|^2}$."},
              {"title": "Project again", "content": "$\\text{proj}_{\\mathbf{a}}\\mathbf{p} = \\frac{\\mathbf{a} \\cdot (c\\mathbf{a})}{\\|\\mathbf{a}\\|^2}\\mathbf{a} = \\frac{c(\\mathbf{a} \\cdot \\mathbf{a})}{\\|\\mathbf{a}\\|^2}\\mathbf{a} = c\\mathbf{a} = \\mathbf{p}$"}
            ],
            "conclusion": "Projecting onto $\\mathbf{a}$ twice gives the same result as projecting once."
          }
        }
      ]
    },
    {
      "sectionId": 77,
      "sectionTitle": "Linear Span",
      "textbookSection": "§13.4",
      "examples": [
        {
          "id": "ex-13-77-1",
          "type": "example",
          "title": "Describing a Span",
          "statement": "Describe geometrically the span of $\\{(1, 2, 1)\\}$ in $\\mathbb{R}^3$.",
          "solution": {
            "steps": [
              {"title": "Span definition", "content": "$\\text{span}\\{(1, 2, 1)\\} = \\{c(1, 2, 1) : c \\in \\mathbb{R}\\} = \\{(c, 2c, c) : c \\in \\mathbb{R}\\}$"},

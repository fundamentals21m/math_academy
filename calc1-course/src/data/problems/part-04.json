      "examples": [
        {
          "id": "ex-5-34-1",
          "type": "example",
          "title": "First and Second Derivative Tests",
          "statement": "Explain the first and second derivative tests for local extrema.",
          "solution": {
            "steps": [
              {
                "title": "First Derivative Test",
                "content": "If $f'$ changes from $+$ to $-$ at $c$, then $f(c)$ is a local max.\nIf $f'$ changes from $-$ to $+$ at $c$, then $f(c)$ is a local min."
              },
              {
                "title": "Second Derivative Test",
                "content": "If $f'(c) = 0$ and $f''(c) > 0$, then $f(c)$ is a local min (concave up).\nIf $f'(c) = 0$ and $f''(c) < 0$, then $f(c)$ is a local max (concave down).\nIf $f''(c) = 0$, test is inconclusive."
              }
            ],
            "conclusion": "These tests classify critical points as maxima or minima."
          }
        }
      ],
      "exercises": [
        {
          "id": "5-34-1",
          "type": "exercise",
          "number": 1,
          "statement": "Find intervals of increase/decrease and local extrema for $f(x) = x^3 - 12x$.",
          "solution": {
            "steps": [
              {
                "title": "Find f'(x)",
                "content": "$f'(x) = 3x^2 - 12 = 3(x^2 - 4) = 3(x-2)(x+2)$"
              },
              {
                "title": "Sign analysis",
                "content": "$f'(x) > 0$ when $x < -2$ or $x > 2$\n$f'(x) < 0$ when $-2 < x < 2$"
              },
              {
                "title": "Classify extrema",
                "content": "At $x = -2$: $f'$ changes $+ \\to -$, so local max. $f(-2) = -8 + 24 = 16$.\nAt $x = 2$: $f'$ changes $- \\to +$, so local min. $f(2) = 8 - 24 = -16$."
              }
            ],
            "conclusion": "Increasing on $(-\\infty, -2) \\cup (2, \\infty)$; decreasing on $(-2, 2)$.\nLocal max at $(-2, 16)$; local min at $(2, -16)$."
          }
        },
        {
          "id": "5-34-2",
          "type": "exercise",
          "number": 2,
          "statement": "Find inflection points and concavity for $f(x) = x^4 - 6x^2 + 8x + 1$.",
          "solution": {
            "steps": [
              {
                "title": "Find f''(x)",
                "content": "$f'(x) = 4x^3 - 12x + 8$\n$f''(x) = 12x^2 - 12 = 12(x^2 - 1) = 12(x-1)(x+1)$"
              },
              {
                "title": "Find inflection points",
                "content": "$f''(x) = 0$ when $x = \\pm 1$."
              },
              {
                "title": "Concavity analysis",
                "content": "$f''(x) > 0$ (concave up) when $x < -1$ or $x > 1$.\n$f''(x) < 0$ (concave down) when $-1 < x < 1$."
              },
              {
                "title": "Evaluate at inflection points",
                "content": "$f(-1) = 1 - 6 - 8 + 1 = -12$\n$f(1) = 1 - 6 + 8 + 1 = 4$"
              }
            ],
            "conclusion": "Inflection points at $(-1, -12)$ and $(1, 4)$.\nConcave up on $(-\\infty, -1) \\cup (1, \\infty)$; concave down on $(-1, 1)$."
          }
        },
        {
          "id": "5-34-3",
          "type": "exercise",
          "number": 3,
          "statement": "Sketch $f(x) = \\frac{x}{x^2 + 1}$ by analyzing derivatives and asymptotes.",
          "solution": {
            "steps": [
              {
                "title": "Domain and symmetry",
                "content": "Domain: all $\\mathbb{R}$. $f(-x) = -f(x)$, so odd function (symmetric about origin)."
              },
              {
                "title": "Asymptotes",
                "content": "As $x \\to \\pm\\infty$: $f(x) \\to 0$. Horizontal asymptote $y = 0$.\nNo vertical asymptotes."
              },
              {
                "title": "Find f'(x)",
                "content": "$f'(x) = \\frac{(x^2+1) - x(2x)}{(x^2+1)^2} = \\frac{1-x^2}{(x^2+1)^2}$\n$f'(x) = 0$ when $x = \\pm 1$."
              },
              {
                "title": "Classify extrema",
                "content": "$f'(x) > 0$ for $-1 < x < 1$; $f'(x) < 0$ for $|x| > 1$.\nLocal max at $(1, \\frac{1}{2})$; local min at $(-1, -\\frac{1}{2})$."
              },
              {
                "title": "Sketch description",
                "content": "Passes through origin, rises to max at $(1, 0.5)$, then decreases toward $0$.\nSymmetric about origin."
              }
            ],
            "conclusion": "S-shaped curve with local max at $(1, \\frac{1}{2})$ and local min at $(-1, -\\frac{1}{2})$."
          }
        },
        {
          "id": "5-34-4",
          "type": "exercise",
          "number": 4,
          "statement": "Show that $f(x) = x^3$ has an inflection point at $x = 0$ but $f''(0) = 0$ (neither concave up nor down there).",
          "solution": {
            "steps": [
              {
                "title": "Compute derivatives",
                "content": "$f'(x) = 3x^2$\n$f''(x) = 6x$"
              },
              {
                "title": "Check at x = 0",
                "content": "$f''(0) = 0$"
              },
              {
                "title": "Check sign change",
                "content": "$f''(x) < 0$ for $x < 0$ (concave down)\n$f''(x) > 0$ for $x > 0$ (concave up)"
              },
              {
                "title": "Conclude",
                "content": "Concavity changes at $x = 0$, so $(0, 0)$ is an inflection point, even though $f''(0) = 0$."
              }
            ],
            "conclusion": "Inflection points require a sign change in $f''$, not just $f'' = 0$."
          }
        }
      ]
    }

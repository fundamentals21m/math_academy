      "sectionId": 19,
      "sectionTitle": "Coordinate Geometry",
      "textbookSection": "Section 19",
      "examples": [
        {
          "id": "ex-3-19-1",
          "type": "example",
          "title": "Distance Formula",
          "statement": "Derive the distance formula between two points $(x_1, y_1)$ and $(x_2, y_2)$.",
          "solution": {
            "steps": [
              {
                "title": "Form right triangle",
                "content": "The horizontal leg has length $|x_2 - x_1|$.\nThe vertical leg has length $|y_2 - y_1|$."
              },
              {
                "title": "Apply Pythagorean theorem",
                "content": "$d^2 = (x_2 - x_1)^2 + (y_2 - y_1)^2$"
              }
            ],
            "conclusion": "$d = \\sqrt{(x_2 - x_1)^2 + (y_2 - y_1)^2}$"
          }
        }
      ],
      "exercises": [
        {
          "id": "3-19-1",
          "type": "exercise",
          "number": 1,
          "statement": "Find the distance between $(3, 7)$ and $(-1, 4)$.",
          "solution": {
            "steps": [
              {
                "title": "Apply formula",
                "content": "$d = \\sqrt{(-1-3)^2 + (4-7)^2} = \\sqrt{16 + 9} = \\sqrt{25} = 5$"
              }
            ],
            "conclusion": "The distance is 5 units."
          }
        }
      ]
    },
    {
      "sectionId": 20,
      "sectionTitle": "Lines and Circles",
      "textbookSection": "Section 20",
      "examples": [
        {
          "id": "ex-3-20-1",
          "type": "example",
          "title": "Circle Equation",
          "statement": "Find the equation of a circle with center $(h, k)$ and radius $r$.",
          "solution": {
            "steps": [
              {
                "title": "Use distance formula",
                "content": "A point $(x, y)$ is on the circle iff its distance from $(h, k)$ equals $r$."
              },
              {
                "title": "Write equation",
                "content": "$\\sqrt{(x-h)^2 + (y-k)^2} = r$\n$(x-h)^2 + (y-k)^2 = r^2$"
              }
            ],
            "conclusion": "Circle equation: $(x-h)^2 + (y-k)^2 = r^2$"
          }
        }
      ],
      "exercises": [
        {
          "id": "3-20-1",
          "type": "exercise",
          "number": 1,
          "statement": "Find the center and radius of the circle $x^2 + y^2 - 6x + 4y - 12 = 0$.",
          "solution": {
            "steps": [
              {
                "title": "Complete the square",
                "content": "$(x^2 - 6x + 9) + (y^2 + 4y + 4) = 12 + 9 + 4 = 25$\n$(x-3)^2 + (y+2)^2 = 25$"
              }
            ],
            "conclusion": "Center: $(3, -2)$, Radius: $5$"
          }
        }
      ]
    },
    {
      "sectionId": 23,
      "sectionTitle": "Conic Sections",
      "textbookSection": "Section 23",
      "examples": [
        {
          "id": "ex-3-23-1",
          "type": "example",
          "title": "Ellipse Equation",
          "statement": "Derive the equation of an ellipse with foci at $(\\pm c, 0)$ and major axis $2a$.",
          "solution": {
            "steps": [
              {
                "title": "Definition",
                "content": "An ellipse is the set of points where sum of distances to foci equals $2a$:\n$\\sqrt{(x+c)^2 + y^2} + \\sqrt{(x-c)^2 + y^2} = 2a$"
              },
              {
                "title": "Simplify",
                "content": "After algebraic manipulation:\n$\\frac{x^2}{a^2} + \\frac{y^2}{b^2} = 1$\nwhere $b^2 = a^2 - c^2$"
              }
            ],
            "conclusion": "Standard form: $\\frac{x^2}{a^2} + \\frac{y^2}{b^2} = 1$"
          }
        }
      ],
      "exercises": [
        {
          "id": "3-23-1",
          "type": "exercise",
          "number": 1,
          "statement": "Find the foci of the ellipse $\\frac{x^2}{25} + \\frac{y^2}{9} = 1$.",
          "solution": {
            "steps": [
              {
                "title": "Identify parameters",
                "content": "$a^2 = 25 \\Rightarrow a = 5$\n$b^2 = 9 \\Rightarrow b = 3$"
              },
              {
                "title": "Find c",
                "content": "$c^2 = a^2 - b^2 = 25 - 9 = 16$\n$c = 4$"
              }
            ],
            "conclusion": "Foci: $(\\pm 4, 0)$"
          }
        }
      ]
    }
  ]
}

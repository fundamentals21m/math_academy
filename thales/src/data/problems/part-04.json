      "examples": [
        {
          "id": "ex-4-21-1",
          "type": "example",
          "title": "Al-Khwarizmi's Completing the Square",
          "statement": "Solve $x^2 + 10x = 39$ using al-Khwarizmi's geometric method of completing the square.",
          "solution": {
            "steps": [
              {
                "title": "Draw the geometry",
                "content": "Start with a square of side $x$ (area $x^2$).\n\nAdd two rectangles of dimension $x \\times 5$ (total area $10x$).\n\nThe total area is $x^2 + 10x = 39$."
              },
              {
                "title": "Complete the square",
                "content": "To complete the large square, add a small square of side 5 (area 25).\n\nNew total: $x^2 + 10x + 25 = 39 + 25 = 64$"
              },
              {
                "title": "Solve",
                "content": "$(x + 5)^2 = 64$\n$x + 5 = 8$ (taking positive root)\n$x = 3$"
              }
            ],
            "conclusion": "$x = 3$. Check: $3^2 + 10(3) = 9 + 30 = 39$ ✓"
          }
        }
      ],
      "exercises": [
        {
          "id": "4-21-1",
          "type": "exercise",
          "number": 1,
          "statement": "Use al-Khwarizmi's method to solve $x^2 + 6x = 16$.",
          "solution": {
            "steps": [
              {
                "title": "Complete the square",
                "content": "$x^2 + 6x + 9 = 16 + 9 = 25$\n$(x + 3)^2 = 25$"
              },
              {
                "title": "Solve",
                "content": "$x + 3 = 5$ (positive root)\n$x = 2$"
              },
              {
                "title": "Verify",
                "content": "$2^2 + 6(2) = 4 + 12 = 16$ ✓"
              }
            ],
            "conclusion": "$x = 2$"
          }
        }
      ]
    },

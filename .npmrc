# pnpm monorepo configuration
# See https://pnpm.io/npmrc

# Hoist all dependencies to the root for better compatibility with tools
shamefully-hoist=true

# Allow peer dependencies to be installed even if they're not met
auto-install-peers=true

# Ignore engine requirements (Node version) during install
# Remove this once all machines are on Node 20+
engine-strict=false

# Use the latest lockfile version
lockfile-version=3
